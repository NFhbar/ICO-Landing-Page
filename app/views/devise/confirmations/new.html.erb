<% provide(:title, "Resend confirmation email") %>

<!-- _logo -->
<%= render :partial => 'devise/shared/logo' %>

<div class="passwordBox animated fadeInDown ">
  <div class="row">
    <div class="col-md-12">
      <div class="ibox">
        <div class="ibox-title">
          <center><h3>Resend confirmation email</h3><center>
        </div>
        <div class="ibox-content">
          <%= form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post }) do |f| %>
            <%= devise_error_messages! %>

            <!-- email -->
            <div class="form-group has-feedback" id="login-inputs">
              <%= f.email_field :email, autofocus: true, class: 'form-control',
              placeholder: 'email',
              value: (resource.pending_reconfirmation? ? resource.unconfirmed_email : resource.email) %>
            </div>

            <!-- SUBMIT -->
            <%= f.submit "Resend email", class: "btn btn-primary block full-width m-b"%>

            <% end %>

          <%= render "devise/shared/links" %>
        </div><!-- ibox content -->
      </div><!-- ibox -->
    </div><!-- col -->
  </div><!-- row -->
  <hr />
  <%= render :partial => 'devise/shared/copyright' %>
</div><!-- passwordbox -->
